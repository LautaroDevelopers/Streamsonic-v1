<div class="cardBox flex flex-col">
    <h2 class="text-2xl font-bold">Perfil</h2>
    <section class="grid gap-2 px-4 grid-cols-1 md:grid-cols-2">
        <div class="flex flex-col">
            <h3 class="text-lg">Nombre y apellido</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.name || 'No ingresado' %>
            </span>
        </div>
        <div class="flex flex-col">
            <h3 class="text-lg">Nombre de usuario</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.user || 'No ingresado' %>
            </span>
        </div>
        <div class="flex flex-col">
            <h3 class="text-lg">Correo electronico</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.email || 'No ingresado' %>
            </span>
        </div>
        <div class="flex flex-col">
            <h3 class="text-lg">Telefono Celular</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.phone || 'No ingresado' %>
            </span>
        </div>
    </section>
    <h2 class="flex align-center text-2xl font-bold">
        <ion-icon class="font-bold text-red-900 text-3xl" name="location-outline"></ion-icon> Ubicación
    </h2>
    <section class="grid gap-2 grid-cols-2 px-4">
        <div class="flex flex-col">
            <h3 class="text-lg">Dirección</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.address || 'No ingresado' %>
            </span>
        </div>
        <div class="flex flex-col">
            <h3 class="text-lg">Departamento</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.department || 'No ingresado' %>
            </span>
        </div>
        <div class="flex flex-col">
            <h3 class="text-lg">Provincia</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.province || 'No ingresado' %>
            </span>
        </div>
        <div class="flex flex-col">
            <h3 class="text-lg">Codigo postal</h3>
            <span class="bg-gray-300 p-2 rounded">
                <%= user.zipcode || 'No ingresado' %>
            </span>
        </div>
    </section>
</div>